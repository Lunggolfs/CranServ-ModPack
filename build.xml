<project name="CranServ-ModPack" default="zip" basedir="/var/lib/jenkins/jobs/CranServ ModPack/workspace">
    <description>
        Zip script to work with Jenkins
    </description>
  <!-- set global properties for this build -->
  <property name="dist"  location="dist"/>

  <target name="zip">
    <!-- Zip all files into a single zip -->
    <zip destfile="${dist}/CranServ-ModPack.zip"
        basedir="/var/lib/jenkins/jobs/CranServ ModPack Beta/workspace"
        excludes=".gitignore, .gitattributes, build.xml, .git/**"
        compress="true"
    />
  </target>
</project>