
<project name="CranServ-ModPack-Beta" default="zip" basedir="/">
    <description>
        Zip script to work with Jenkins
    </description>
    <target name="zip">
        <!-- Zip all files into a single zip -->
        <zip destfile="${dist}/CranServ-ModPack-Beta.zip"
            basedir="/"
            excludes=".gitignore", ".gitattributes", "build.xml", ".git/**"
            compress="true"
        />
    </target>
</project>